<div class="recipe-img">
    <p>Imagem da receita</p>
    <input 
        type="url" 
        name="image"
        value="{{recipe.image}}">

</div>

<div class="recipe-title-form">
        <p>Titulo da receita</p>

        <div class="ingredient">
            <input 
                type="text" 
                name="title" 
                value="{{recipe.title}}">
        </div>

</div>

    <div class="recipe-author-form">
        <p>Autor da receita</p>

        <select name="chef_id" >

            {% for chef in options %}
                 <option value="{{chef.id}}">{{chef.name}}</option>
            {% endfor %}

        </select>

    </div>

<div class="recipe-ingredients">
    <p>Ingredientes</p>

    {% for ingredient in recipe.ingredients %}
    <div class="ingredient">
        <input 
            type="text" 
            name="ingredients[]" 
            value="{{ingredient}}">
    </div>
    {% endfor %}
    
</div>
<button type="button" class="add-ingredient" onclick="addIngredient()">Adicionar novo ingrediente</button>

<div class="recipe-preparation">
    <p>Modo de preparo</p>

    {% for step in recipe.preparation %}
    <div class="preparation">
        <input 
            type="text" 
            name="preparation[]"
            value="{{step}}" >
    </div>
    {% endfor %}
</div>
<button type="button" class="add-step" onclick="addStep()">Adicionar novo passo</button>

<div class="recipe-information">
    <p>Informações adicionais</p>
    <textarea 
        name="information" 
        cols="30" 
        rows="30"
        >{{ "Nenhuma informação extra" if recipe.information == "" else recipe.information }}</textarea>
</div>