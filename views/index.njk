    {% extends "layout.njk" %}
    
    {% block content %}
    
    <section class="banner">
        <div>
        <h1>As melhores receitas</h1>
        <p>
            Aprenda a construir os melhores pratos
            com receitas criadas por profissionais
            do mundo inteiro.
        </p>
        </div>
        <img src="chef.png" alt="Mascote do Site">
    </section>

    <div class="most-accessed">
    <h1>Mais acessadas</h1>
    </div>

    <section class="cards">
       
       {% for card in cards %}
       
        <div class="card">
            <div class="card-img">
                 <img src="{{ card.image }}" alt="Receita">
            </div>

            <div class="card-texts">
                 <h3>{{ card.title }}</h3>
                 <p>{{ card.author }}</p>
            </div>
        </div>

     {% endfor %}
      
    </section>


    {% include "modal.njk"%}

    {% endblock content %}